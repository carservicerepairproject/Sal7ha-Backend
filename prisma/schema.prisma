generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique

  firstName   String?
  lastName    String?
  phoneNumber Int

  streetAddress String?
  country       String?
  city          String?

  // Relationships
  businessOwner BusinessOwner?
  client        Client?
}

model Client {
  id     Int    @id @default(autoincrement())
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
  hash   String
}

model BusinessOwner {
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model Business {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  email String @unique
  hash  String

  name                        String
  phoneNumber                 Int
  country                     String
  city                        String
  // السجل التجاري
  commercialRegistraionNumber Int
  // بطاقة ضريبية
  taxIdentificationNumber     Int
}
